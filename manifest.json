{
	"manifest_version": 2,
	"name": "Javascript Pause Extension",
	"version": "1.0.0",
	"description": "A browser extension to pause JavaScript execution on any website",
	"permissions": ["activeTab", "debugger", "*://*/*"],
	"commands": {
		"toggle-pause": {
			"suggested_key": {
				"default": "Alt+Shift+P",
				"mac": "Alt+Shift+P"
			},
			"description": "Toggle JavaScript pause"
		}
	},
	"browser_action": {
		"default_icon": {
			"16": "./icons/16.png",
			"32": "./icons/32.png"
		},
		"default_title": "Pause JavaScript"
	},
	"action": {
		"default_icon": {
			"16": "./icons/16.png",
			"32": "./icons/32.png"
		},
		"default_title": "Pause JavaScript"
	},
	"icons": {
		"16": "./icons/16.png",
		"32": "./icons/32.png",
		"48": "./icons/48.png",
		"128": "./icons/128.png"
	},
	"background": {
		"scripts": ["brain.js"],
		"persistent": false
	}
}
